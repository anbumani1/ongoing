<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards">
    <Dialog id="learningDialog" title="Learning Management System" contentWidth="1000px" contentHeight="700px" resizable="true">
        <content>
            <VBox id="learningContainer" class="sapUiMediumMargin">

                <!-- SAP Learning Paths - Basic to Advanced -->
                <Panel id="learningPathsPanel" headerText="SAP Learning Paths - Basic to Advanced" class="sapUiMediumMarginBottom">
                    <content>
                        <VBox id="pathsContainer" class="sapUiMediumMargin">
                            <List id="learningPathsList" items="{/learningPaths}" mode="None">
                                <CustomListItem id="pathListItem" type="Active" press="onOpenLearningPath">
                                    <content>
                                        <HBox id="pathItemBox" justifyContent="SpaceBetween" alignItems="Center" class="sapUiMediumMargin">
                                            <VBox id="pathInfoBox" class="sapUiMediumMarginEnd">
                                                <HBox id="pathTitleBox" alignItems="Center">
                                                    <core:Icon id="pathIcon" src="{icon}" size="1.5rem" color="{color}" class="sapUiMediumMarginEnd"/>
                                                    <VBox id="pathTitleContent">
                                                        <Title id="pathTitle" text="{name}" level="H5"/>
                                                        <Text id="pathLevel" text="Level: {level}" class="sapUiContentLabelColor"/>
                                                    </VBox>
                                                </HBox>
                                                <Text id="pathDescription" text="{description}" maxLines="3" class="sapUiTinyMarginTop"/>
                                                <HBox id="pathMetaBox" class="sapUiTinyMarginTop">
                                                    <Text id="pathDuration" text="Duration: {duration}" class="sapUiContentLabelColor sapUiTinyMarginEnd"/>
                                                    <Text id="pathCertification" text="Certification: {certification}" class="sapUiContentLabelColor"/>
                                                </HBox>
                                            </VBox>
                                            <VBox id="pathStatusBox" alignItems="End" width="200px">
                                                <Button id="pathActionBtn" text="Start Learning" type="Emphasized" press="onOpenLearningPath" class="sapUiTinyMarginTop">
                                                    <customData>
                                                        <core:CustomData id="pathData" key="url" value="{url}"/>
                                                        <core:CustomData id="pathNameData" key="pathName" value="{name}"/>
                                                    </customData>
                                                </Button>
                                            </VBox>
                                        </HBox>
                                    </content>
                                </CustomListItem>
                            </List>
                        </VBox>
                    </content>
                </Panel>



                <!-- SAP Learning Resources -->
                <Panel id="resourcesPanel" headerText="SAP Learning Resources" class="sapUiMediumMarginTop">
                    <content>
                        <VBox id="resourcesContainer" class="sapUiMediumMargin">
                            <List id="resourcesList" items="{/learningResources}" mode="None">
                                <CustomListItem id="resourceItem" type="Active" press="onOpenLearningResource">
                                    <content>
                                        <HBox id="resourceItemBox" justifyContent="SpaceBetween" alignItems="Center" class="sapUiMediumMargin">
                                            <HBox id="resourceInfoBox" alignItems="Center" class="sapUiMediumMarginEnd">
                                                <core:Icon id="resourceIcon" src="{icon}" size="2rem" color="{color}" class="sapUiMediumMarginEnd"/>
                                                <VBox id="resourceContent">
                                                    <Title id="resourceTitle" text="{name}" level="H6"/>
                                                    <Text id="resourceDesc" text="{description}" class="sapUiContentLabelColor"/>
                                                    <Text id="resourceType" text="Type: {type}" class="sapUiContentLabelColor sapUiTinyMarginTop"/>
                                                </VBox>
                                            </HBox>
                                            <Button id="resourceActionBtn" text="Open Resource" type="Emphasized" press="onOpenLearningResource">
                                                <customData>
                                                    <core:CustomData id="resourceData" key="url" value="{url}"/>
                                                    <core:CustomData id="resourceNameData" key="resourceName" value="{name}"/>
                                                </customData>
                                            </Button>
                                        </HBox>
                                    </content>
                                </CustomListItem>
                            </List>

                        </VBox>
                    </content>
                </Panel>
            </VBox>
        </content>
        <endButton>
            <Button id="closeLearningBtn" text="Close" press="onCloseLearningDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
